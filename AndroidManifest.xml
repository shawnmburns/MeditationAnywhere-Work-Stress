<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.meditatenowWorkStress"
    android:versionCode="2"
    android:versionName="2.0" >
    
    <uses-permission android:name="android.permission.VIBRATE" />

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar" >
        <activity
            android:name="com.meditatenowWorkStress.MainActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.meditatenowWorkStress.MNHomeActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask">
        </activity>
        <activity
            android:name="com.meditatenowWorkStress.MNNotificationActivity"
            android:screenOrientation="portrait">
        </activity>
        <receiver android:process=":remote" android:name="com.meditatenowWorkStress.MNAlarmReceiver"></receiver>
    </application>

</manifest>